                        orient: 'vertical',
                        x: 'left',
                        show:false
                    },
                    series:
                        {
                            name:'',
                            type:'pie',
                            radius: ['65%', '85%'],
                            avoidLabelOverlap: true,
                            hoverAnimation:false,
                            label: {
                                normal: {
                                    show: false,
                                    position: 'center'
                                },
                                emphasis: {
                                    show: false
                                }
                                },
                            labelLine: {
                                normal: {
                                    show: false
                                }
                                },
                            data:[
